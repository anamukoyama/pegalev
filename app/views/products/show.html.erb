         <!--  <button type="button" class="btn btn-success"><%#=t('.cta')%></button> -->
        <%# end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="tag-list">
        <span><%= @product.category=%></span>
        <span>Dura at√© <%= @product.best_before == 1 ? " #{@product.best_before} dia" : " #{@product.best_before} dias" %> na geladeira</span>
      </div>
    </div>
  </div>
  <h4><%=t('.buy_more')%></h4>
  <div class= "row">
    <div class="col-md-4">
      <img class="img-responsive" src="http://placehold.it/300x150">
    </div>
