<div class="container fit-header">
  <div class= "row">
    <div class="col-md-9">
      <%= render 'product_photo' %>
    </div>
    <div class="product-details">
      <div class="col-md-3 col-sm-3">
        <h2><%= @product.name %></h2>
        <h3><%= number_to_currency(@product.price, :unit => "R$ ", :separator => ",", :delimiter => ".") %></h3>
        <p><%=t('.price_set_by')%> KG</p>
        <%#= link_to t('.cta'), :action => :add_to_bascket, market_id: @market.id, id: @product.id, class: "btn btn-success", method: :post %>
