<div class="banner inside"></div>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div id="map" style="width: 100%; height: 400px;"></div>
    </div>
    <div class="col-xs-12 col-md-8">
      <table class="table">
      <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Matrícula</th>
        <th colspan="2">Dia na semana</th>
      </tr>
      <% @markets.each do |m| %>
        <tr>
          <td><a class="point_map" data-latitude="<%= m.latitude %>" data-longitude="<%= m.longitude %>"><%= m.name %></a></td>
          <td><%= m.address %></td>
          <td><%= m.inscription %></td>
          <td><%= m.weekday %></td>
          <td><%=link_to "Mais detalhes", market_path(m) %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });

      $('.point_map').on('click', function(){
        console.log('lat: ' + $(this).data('latitude') + ', long: ' + $(this).data('longitude'));
        handler.map.centerOn({ lat: $(this).data('latitude'), lng: $(this).data('longitude') })
        handler.getMap().setZoom(17);
      });

    });
  <% end %>
<% end %>
