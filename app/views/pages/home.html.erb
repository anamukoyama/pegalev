<div class="banner">
  <div class="banner-content">
    <div class="banner-content-form">
      <h3><%=t('.main_msg')%> </h3>
      <form id="form_search_by_cep" action="/search">
        <div class="input-group">
            <input type="text" name="search_by_cep" class="cep-mask form-control" placeholder="Digite o CEP da entrega">
            <span class="input-group-btn">
              <button class="btn btn-primary" type="submit"><%=t('.search')%></button>
            </span>
        </div>
      </form>
      <%= link_to "Não sabe o cep? Digite o endereço da entrega", id: "btn_search_by_address", class: "banner-content-small text-left" %>
    </div>
    <div>
      <form id="form_search_by_address" action="/search" style="display: none;">
        <div class="input-group">
          <input type="text" name="search_by_address" class="form-control" placeholder="Digite seu endereço">
          <span class="input-group-btn">
            <button class="btn btn-primary" type="submit"><%=t('.search')%><</button>
          </span>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="how-it-works-content">
  <h2><%=t('.how-it-works')%> </h2>
  <div class="row">
    <div class="col-sm-4">
      <h3><i class="fa fa-map-marker"></i> <%=t('.step_1')%></h3>
      <p><%=t('.step_1_msg')%></p>
    </div>
    <div class="col-sm-4">
      <h3><i class="fa fa-clock-o"></i> <%=t('.step_2')%></h3>
      <p><%=t('.step_2_msg')%></p>
    </div>
    <div class="col-sm-4">
      <h3><i class="fa fa-home"></i> <%=t('.step_3')%></h3>
      <p><%=t('.step_3_msg')%></p>
    </div>
  </div>
</div>
