<div class="wrapper-cart-details">
   <div class="container fit-header">
     <div class="row">
       <h1><%=t('.title')%></h1>
       <div class="cart-details">
         <div class="cart-itens col-md-6 col-xs-12">
           <h3><%=t('.your_list_is')%></h3>
           <!-- Trazer aqui os produtos + unidades + preco total -->

           <% current_order.order_items.each do |item| %>
            <p> <%= item.product.name.capitalize %> - <%= item.quantity %> caixa por <%= number_to_currency(item.total_price, :unit => "R$ ", :separator => ",", :delimiter => ".") %></p>
           <% end %>

           <h3> Total a pagar <%= number_to_currency(current_order.total, :unit => "R$ ", :separator => ",", :delimiter => ".") %></h3>
         </div>
         <div class="cart-address col-md-6 col-xs-12">
           <!-- Trazer o endereco completo -->
           <h3> <%=t('.your_delivery_address')%> </h3>
           <p><%= @street %>, <%= @number %> - <%= @district %>, <%= @city %></p>
           <h3> <%=t('.choose_a_delivery_time')%> </h3>
           <div class="tag-list">
             <!-- Estes horários devem ser uma escolha única -->
             <span>7 as 9hs</span>
             <span>9 as 11hs</span>
             <span>11 as 13hs</span>
             <span>19 as 21hs</span>
             <span>21 as 23hs</span>
           </div>
         </div>
       </div>
     </div>
   </div>
 </div>
 <div class="wrapper-pay">
   <div class="container">
     <div class="row">
       <div class="payment-details container col-xs-12">
         <h2><%=t('.payment-method')%></h2>
         <p><%=t('.disclaimer')%></p>
         <!-- Incluir aqui um campo para pegarmos o troco  -->
         <h4> Precisa de troco pra quanto? </h4>
       </div>
     </div>
   </div>
 </div>
